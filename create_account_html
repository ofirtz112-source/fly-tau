          <input type="text" name="phone_numbers" required placeholder="Phone number">
        </div>

        <button type="button" class="small-btn" onclick="addPhone()">+ Add another phone</button>

        <script>
          function addPhone() {
            const container = document.getElementById("phones");
            const input = document.createElement("input");
            input.type = "text";
            input.name = "phone_numbers";
            input.placeholder = "Phone number";
            container.appendChild(input);
          }
        </script>

